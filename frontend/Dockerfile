# Construimos la app con Node
FROM node:20-alpine AS builder

WORKDIR /app
COPY package*.json ./
COPY vite.config.js ./
COPY src/ src/
COPY public/ public/

RUN npm install
RUN npm run build

# Servimos la app con Nginx
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
